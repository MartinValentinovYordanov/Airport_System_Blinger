@model IEnumerable<Blinger.MVC.Data.Airport>

@{
    ViewData["Title"] = "IndexForDelete";
}

<body class="FlightIndex">
    <p class="CreateNew">
        Here you can Delete Airports.
    </p>
    <table class="table">
        <thead>
            <tr class="changeColorToRed">
                <th>
                    Airport
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="changeColorToRed">
                    <td>
                        @Html.DisplayFor(modelItem => item.Airport_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btnfordelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </body>